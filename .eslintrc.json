{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "react/no-unescaped-entities": "off", // Disable unescaped entities rule for JSX
    "no-console": "warn", // Allow console statements, but show a warning instead of an error
    "react/react-in-jsx-scope": "off", // Disable the requirement to import React in JSX files (handled by Next.js)
    "no-unused-vars": "warn", // Warn instead of error for unused variables
    "@typescript-eslint/no-unused-vars": "warn", // Handle unused variables for TypeScript files
    "jsx-a11y/anchor-is-valid": "off" ,// Turn off the rule for anchor validation in JSX (useful for <Link> in Next.js)
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-empty-object-type":"warn"
  }
}

